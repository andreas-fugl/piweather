#:kivy 1.0
BoxLayout:
    orientation: 'horizontal'
    id: rootBox
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.1, 1)
        # name: 'leftBox'
        Button:
            name: 'l1button'
            text: 'l.1'
        Button:
            name: 'l2button'
            text: 'l.2'
    BoxLayout:
        orientation: 'vertical'
        # name: 'middleBox'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'm.1'
                name: 'm1button'
                on_press: app.on_button_press(self)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.15)
                Button:
                    text: 'm2leftbutton'
                    name: 'm2leftbutton'
                Button:
                    text: 'm2rightbutton'
                    name: 'm2rightbutton'
    BoxLayout:
        orientation: 'vertical'
        # name: 'rightBox'
        size_hint: (0.1, 1)
        Button:
            name: 'r1button'
            text: 'r.1'
        Button:
            name: 'r2button'
            text: 'r.2'
        
